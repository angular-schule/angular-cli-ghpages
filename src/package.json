{
  "name": "ngx-deploy-starter",
  "version": "0.0.1",
  "description": "Deployment from the Angular CLI to the file system. This is a sample project that helps you to implement your own deployment builder (ng deploy) for the Angular CLI.",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && json2ts deploy/schema.json > deploy/schema.d.ts && tsc && copyfiles README.md builders.json collection.json package.json ngx-deploy-starter deploy/schema.json dist",
    "test": "jest"
  },
  "schematics": "./collection.json",
  "builders": "./builders.json",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/angular-schule/ngx-deploy-starter.git"
  },
  "keywords": [
    "angular",
    "cli",
    "angular-cli",
    "deploy",
    "ng deploy",
    "ng-deploy"
  ],
  "author": {
    "name": "Johannes Hoppe",
    "email": "johannes.hoppe@haushoppe-its.de"
  },
  "contributors": [
    "Minko Gechev <mgechev@gmail.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/angular-schule/ngx-deploy-starter/issues"
  },
  "homepage": "https://github.com/angular-schule/ngx-deploy-starter/#readme",
  "devDependencies": {
    "@angular-devkit/architect": "^0.803.0-next.0",
    "@angular-devkit/core": "^8.3.0-next.0",
    "@angular-devkit/schematics": "^8.3.0-next.0",
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.6.9",
    "copyfiles": "^2.1.1",
    "jest": "^24.8.0",
    "json-schema-to-typescript": "^7.0.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "peerDependencies": {
    "@angular-devkit/architect": ">=0.800.0",
    "@angular-devkit/core": ">=8.0.0",
    "@angular-devkit/schematics": ">=8.0.0"
  },
  "dependencies": {
    "fs-extra": "^8.1.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
